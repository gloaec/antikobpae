#navigation.home {
		background: #061E4A url(<%= asset_path 'navigation-home-bg.jpg' %>) no-repeat center top;
}

#home {
	background: url(<%= asset_path 'home-bg2.png' %>) no-repeat center top;
	margin: 0 auto;
	padding: 23px 0 0 0;
	position: relative;
	height: 450px;
}

#home label {
	color: #FFF;
	font-weight: normal;
	text-shadow: 0 1px 0 rgba(0,0,0,.5px);	
}

#home .span-3 {
	padding: 20px 0;
}

#home .remember {
	padding: 15px 0 20px;
}

#home .spacing {
	margin-top:10px;
	margin-bottom:17px;
}

#home a {
	color: white;
	text-decoration: none;
	text-shadow: 1px 1px 5px black;
}

#home a:hover {
	color: #6DBAFF;
}

#home button {
	width: 120px;
}

#home input[type="text"], 
#home input[type="password"], 
#home input[type="url"], 
#home input[type="email"], 
#home input.text, 
#home input.title, 
#home textarea {
	background-color: white;
	color: black;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
	-moz-box-shadow:inset 2px 1px 5px #555;
	-webkit-box-shadow:inset 2px 1px 5px #555;
	box-shadow:inset 2px 1px 5px #555;
	border: 1px solid #19468E;
	padding: 6px;
}

#home input[type="submit"] {
	border: 1px solid #19468E;
	padding: 6px;
	color: black;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
}