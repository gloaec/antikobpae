<tr id="document_${id}" class="${tr_class}">
	<td class="icon"><%= image_tag('/images/fileicons/${attachment_file_type}.png', :width => 16, :height => 16) %></td>
	<td class="document_name"><a href="/documents/${id}">${name}</a></td>
	<td class="document_status">{{html state.icon}} <span id="document_status_${id}">${state.text}</span></td>
	<td class="document_size">${attachment_file_size}</td>
	<td class="document_modified">${updated_at}</td>
	<td class="options"><a href="/documents/${id}/share_links/new"><%= image_tag('share.png', :alt => I18n.t(:share)) %></a><a href="/clipboard?authenticity_token=${form_authenticity_token}&folder_id=${folder_id}&id=${id}&type=document" data-method="post" rel="nofollow" title="Add to clipboard"><%= image_tag('clipboard_add.png', :alt => I18n.t(:add_to_clipboard)) %></a><a href="/documents/${id}/edit" title="Edit"><%= image_tag('edit.png', :alt => I18n.t(:edit)) %></a><a href="/documents/${id}" data-confirm="Are you sure?" data-method="delete" rel="nofollow" title="Delete"><%= image_tag('icons/delete.png', :alt => I18n.t(:delete_item)) %></a>
	</td>
</tr>